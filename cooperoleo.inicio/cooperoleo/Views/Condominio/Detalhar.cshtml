@model CondominioModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Cliente - Detalhe</h2>
                <form asp-action="Detalhar" asp-controller="Condominio" method="get">                   
                    <input type="hidden" asp-for="CondominioId" readonly/> @*campo necessário para poder salvar no banco de dados*@
                    <div class="form-group">
                        <label class="control-label" asp-for="NomeCondominio"></label>
                        <input class="form-control col-5" asp-for="NomeCondominio" readonly/>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Contato"></label>
                        <input class="form-control col-5" asp-for="Contato" readonly/>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Endereco"></label>
                        <input class="form-control col-5" asp-for="Endereco" readonly/>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="ConteinerId"></label>
                        <input class="form-control col-5" asp-for="ConteinerId" readonly/>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Ativo" id="ativoSim" value="true" disabled>
                        <label class="form-check-label" asp-for="Ativo">
                        Ativo - Sim
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Ativo" id="ativoNao" value="false" disabled>
                        <label class="form-check-label" asp-for="Ativo">
                        Ativo - Não
                        </label>
                    </div>
                    <a asp-action="Index" class="btn btn-default btn-lg">Voltar</a>                
                </form>
            </div>
        </div>
    </div>
</div>
